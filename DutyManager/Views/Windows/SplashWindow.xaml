<Window x:Class="DutyManager.Views.Windows.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent" WindowStartupLocation="CenterScreen"
        Height="200" Width="400">
    <Border CornerRadius="10" Background="AliceBlue" BorderBrush="#FF007ACC" BorderThickness="1">
        <Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Height="50" Width="50" HorizontalAlignment="Left" Source="/Views/Windows/软件图标.png"/>
                <TextBlock Text="Duty Manager" Foreground="Black" 
                           FontSize="24" FontWeight="Bold" Width="175" HorizontalAlignment="Center"/>
                <ProgressBar Height="20" Width="300" Margin="0,20" 
                             IsIndeterminate="True" Foreground="#FF007ACC"/>
                <TextBlock x:Name="txtStatus" Text="正在初始化..." 
                           Foreground="DarkBlue" Margin="0,10" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>